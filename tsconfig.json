{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "newLine": "LF",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/index.tsx"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
